uint cte_Burn(Critter&cr,int identifier,uint&rate)
{
	if(cr.IsDead())cr.StatBase[(120)]=0;
	int count=cr.Stat[(120)];
	cr.StatBase[(120)]=(((count)>((1)))?((1)):(((count)<(0))?(0):(count)));
	count=cr.Stat[(120)];
	if(count>0)
	{
		InjureCritter(cr,(Random(1,2)),(3),0,cr.Stat[(188)]);
		cr.StatBase[(120)]-=1;
		if(cr.Stat[(72)]<=-19)cr.ToDead((118),null);
	}
	return GetBurnDuration(cr);
}

uint GetBurnDuration(Critter&cr)
{
	int duration;
	int count=cr.Stat[(120)];
	if(count==0)return 0;
	duration=count*(100);
	if(duration<=0)cr.EraseTimeEvents((11));
	return duration;
}