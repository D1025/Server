		}
		if(positions[positionsCount].posY>StartPosY+10*12)
		{
			positions[positionsCount].text.Visible(false);
		}
		
		LastPosY+=12;
		
	}
	
	void Down()
	{
		uint positionsCount=positions.length();
		
		if(positions[positionsCount-1].posY-12<StartPosY)return;
		
		if(positionsCount>0)
		{
			for(uint i=0;i<positionsCount;i++)
			{
				positions[i].AddToPosY(-12);
				
				positions[i].text.Visible(true);
				if(positions[i].posY<StartPosY)
				{
					positions[i].text.Visible(false);
				}
				if(positions[i].posY>StartPosY+10*12)
				{
					positions[i].text.Visible(false);
				}
				
			}
		}
		
		skillWindow.SetNextSkillActive();
	}
	
	void Up()
	{
		uint positionsCount=positions.length();
		
		skillWindow.SetPrevSkillActive();
		
		if(positions[0].posY+12>StartPosY)return;
		
		if(positionsCount>0)
		{
			for(uint i=0;i<positionsCount;i++)
			{
				positions[i].AddToPosY(12);
				
				positions[i].text.Visible(true);
				if(positions[i].posY<StartPosY)
				{
					positions[i].text.Visible(false);
				}
				if(positions[i].posY>StartPosY+10*12)
				{
					positions[i].text.Visible(false);
				}
			}
		}
	}
	
	void Active(uint id)
	{
		uint positionsCount=positions.length();
		if(positionsCount>0)
		{
			for(uint i=0;i<positionsCount;i++)
			{
				if(positions[i].id==id)
				{
					positions[i].Active();
					break;
				}
			}
		}
	}
	
	void Deactive(uint id)
	{
		uint positionsCount=positions.length();
		if(positionsCount>0)
		{
			for(uint i=0;i<positionsCount;i++)
			{
				if(positions[i].id==id)
				{
					positions[i].Deactive();
					break;
				}
			}
		}
	}
	
	int StartPosX;
	int StartPosY;
	int LastPosX;
	int LastPosY;
	
	ListPosition@[]positions;
}

