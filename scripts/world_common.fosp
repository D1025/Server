                                                                                                                                                                                                                                                                                                                        

bool IsNight()
{
	return(((__Hour)>=22||(__Hour)<=6));
}

bool IsDay()
{
	return(!IsNight());
}

bool IsMorning()
{
	return(((__Hour)>=7&&(__Hour)<=11));
}

bool IsAfternoon()
{
	return(((__Hour)>=12&&(__Hour)<=17));
}

bool IsEvening()
{
	return(((__Hour)>=18&&(__Hour)<=21));
}

bool IsHospital(Map@map)
{
	return map.GetLocation().IsReplication();
}

bool IsCave(Map@map)
{
	return map.GetLocation().IsCave();
}

bool IsMine(Map@map)
{
	return map.GetLocation().IsMine();
}

bool IsJail(Map@map)
{
	int pid=map.GetProtoId();
	return(pid==380||pid==381);
}

bool IsBase(Map@map)
{
	return map.GetLocation().IsBase();
}

bool IsTent(Map@map)
{
	return map.GetLocation().IsTent();
} 

bool IsWarzone(Map@map)
{
	int pid=map.GetProtoId();
	return(pid==550||pid==551);
}
