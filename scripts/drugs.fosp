			cr.AddItem((318),1);
		}
		else if(pid==(273))
		VerboseAction(cr,onCr,"uses healing powder on TARGET");
		else if(pid==(109))
		VerboseAction(cr,onCr,"uses rad-x on TARGET");
		else if(pid==(48))
		VerboseAction(cr,onCr,"uses radaway on TARGET");
		else if(pid==(49))
		VerboseAction(cr,onCr,"gives antidote to TARGET");
