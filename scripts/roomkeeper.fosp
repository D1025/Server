void DefaultRoomkeeperInit(Critter&npc,bool firstTime)
{
	npc.ModeBase[(511)]=1;
	npc.ModeBase[(512)]=0;
	npc.SetEvent((38),"trader@_OnBarter");
	CreateTimeEvent((__FullSecond),"e_Init",npc.Id,false);
}  

