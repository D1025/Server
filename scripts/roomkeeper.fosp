uint e_Init(array<uint>@values)
{
	Critter@npc=GetCritter(values[0]);
	if(!(@npc!=null))
	{
		Log("ERR: Couldn't obtain hotel owner.");
		return 0;
	}
	InitHotel(npc);
	return 0;
}
