bool WantedSignSet(Item&wantedSign,string&name,uint cost)
{
	if(wantedSign.Info!=2)
	{
		wantedSign.Info=2;
		wantedSign.Update();
	}
	SetLexem(wantedSign,"$name",name);
	SetLexem(wantedSign,"$cost",""+cost);
	return true;
}
