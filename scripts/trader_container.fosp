{
	player.AddItem(pid,amount);
	player.DeleteItem((41),cost);
}

uint r_BuyContainer(Critter&player,Critter@npc,int val)
{
	if(val==0)
	BuyContainer((1831),1,(15000),player);
	else if(val==1)
	BuyContainer((1830),1,(15000),player);
	else if(val==2)
	BuyContainer((1829),1,(15000),player);
	else if(val==3)
	BuyContainer((1828),1,(15000),player);
	else if(val==4)
	BuyContainer((1833),1,(15000),player);
	else if(val==5)
	BuyContainer((1832),1,(15000),player);
	
	return(16);
}
