			if(Random(0,14)==0)SpawnedNpc.PerkBase[(405)]+=1;
			if(Random(0,14)==0)SpawnedNpc.PerkBase[(309)]+=1;
			if(Random(0,14)==0)SpawnedNpc.PerkBase[(313)]+=1;
