	uint fid=player.Stat[(106)];
	if(player.CountItem((41))<uint((player.StatBase[(92)])))
	return(12);
	
	if(fid==(1))
	{
		uint res=CreateFaction(player);
		if(res!=0)
		return res;
	}
	
	if(fid==(1))
	fid=player.Stat[(106)];
	
