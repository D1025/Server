void CritterEnterCave(Critter&critter)
{
	if(!critter.IsPlayer())
	return;
	
	file f;
	f.open("logs/cavelog.txt","a"); 
	
	f.close();
}

void ClearVariables()
{
	CavesGenerated=0;
	CrittersGenerated=0;
	CrittersKilled=0;
	PlayerDeaths=0;
	ItemsGenerated=0;
	ItemsPicked=0;
