bool s_GamingTable(Critter&player,Scenery&table,int skill,Item@item)
{
	if(skill==(213))
	{
		GameVar@var=GetLocalVar((6200),player.Id);
		if(!(@var!=null))
		return false;
		
		if(var.GetValue()!=1)
		return false;
		
		int chance=(((player.Skill[(213)])>(95))?(95):(((player.Skill[(213)])<(5))?(5):(player.Skill[(213)])));
		if(chance>Random(0,99))
		{
			var=2;
			player.SayMsg((11),(6),var.GetQuestStr());
		}
		else
		{
			var=3;
			player.SayMsg((11),(6),var.GetQuestStr());
		}
		return true;
	}
	return false;
}
