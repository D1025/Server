void critter_init(Critter&npc,bool firstTime)
{
	npc.SetEvent((0),"_Idle");
} 

void _Idle(Critter&npc)
{
	uint mapid=0;
	uint16 hx=0;
	uint16 hy=0;
	uint8 dir=0;
	npc.GetHomePos(mapid,hx,hy,dir);
	if(hx!=npc.HexX||hy!=npc.HexY||dir!=npc.Dir)
	AddWalkPlane(npc,0,hx,hy,dir,false,0);
	if(npc.Stat[(89)]==(2)){npc.SayMsg((2),(1),(1000000000+(1712)*100000+(Random(1,9))));npc.Wait(Random(10000,15000));}
	else
	if(npc.Stat[(89)]==(3)){npc.SayMsg((2),(1),(1000000000+(1712)*100000+(Random(10,12))));npc.Wait(Random(10000,15000));}
	else
	if(npc.Stat[(89)]==(4)){npc.SayMsg((2),(1),(1000000000+(2503)*100000+(Random(1,5))));npc.Wait(Random(10000,15000));}
	else
	if(npc.Stat[(89)]==(8)){npc.SayMsg((2),(1),(1000000000+(8824)*100000+(Random(1,5))));npc.Wait(Random(10000,15000));}
	else
	if(npc.Stat[(89)]==(6)){npc.SayMsg((2),(1),(1000000000+(2530)*100000+(Random(1,5))));npc.Wait(Random(10000,15000));}
	else
	if(npc.Stat[(89)]==(5)){npc.SayMsg((2),(1),(1000000000+(764)*100000+(Random(1,14))));npc.Wait(Random(10000,15000));}
	else
	if(npc.Stat[(89)]==(1)){npc.SayMsg((2),(1),(1000000000+(1059)*100000+(Random(1,4))));npc.Wait(Random(10000,15000));};
}
